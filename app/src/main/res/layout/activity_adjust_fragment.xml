<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_adjust" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/v_kaobei"
            android:layout_width="130dp"
            android:layout_height="190dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="155dp" />


        <ImageView
            android:id="@+id/iv_kaobei_selected"
            android:layout_width="130dp"
            android:layout_height="190dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="159dp"
            android:background="@drawable/icon_kaobei_selected"
            android:visibility="visible" />

        <View
            android:id="@+id/v_toutuo"
            android:layout_width="48dp"
            android:layout_height="42dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="152dp" />

        <ImageView
            android:id="@+id/iv_toutuo_selected"
            android:layout_width="48dp"
            android:layout_height="42dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="158dp"
            android:background="@drawable/icon_toutuo_selected"
            android:visibility="visible" />

        <View
            android:id="@+id/v_yaotuo"
            android:layout_width="60dp"
            android:layout_height="42dp"
            android:layout_marginLeft="146dp"
            android:layout_marginTop="256dp" />

        <ImageView
            android:id="@+id/iv_yaotuo_selected"
            android:layout_width="60dp"
            android:layout_height="42dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="265dp"
            android:background="@drawable/icon_yaotuo_selected"
            android:visibility="visible" />

        <View
            android:id="@+id/v_tuituo"
            android:layout_width="25dp"
            android:layout_height="70dp"
            android:layout_marginLeft="302dp"
            android:layout_marginTop="318dp" />

        <ImageView
            android:id="@+id/iv_tuituo_selected"
            android:layout_width="25dp"
            android:layout_height="70dp"
            android:layout_marginLeft="262dp"
            android:layout_marginTop="328dp"
            android:background="@drawable/icon_tuituo_selected"
            android:visibility="visible" />

        <View
            android:id="@+id/v_qianhou"
            android:layout_width="85dp"
            android:layout_height="15dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="412dp" />


        <ImageView
            android:id="@+id/iv_qianhou_selected"
            android:layout_width="75dp"
            android:layout_height="15dp"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="425dp"
            android:background="@drawable/icon_qianhou_selected"
            android:visibility="visible" />


    </RelativeLayout>
</RelativeLayout>