<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main">

    <ImageView
        android:id="@+id/iv_main_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_main_seat" />

    <ImageView
        android:id="@+id/iv_setting"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/icon_main_setting"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/rl_setting_pop"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/icon_setting_pop"
        android:visibility="gone">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="110dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/icon_long_pressed_title" />

        <RelativeLayout
            android:id="@+id/rl_setting_sleep_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:id="@+id/rl_setting_triangle_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp">

                <ImageView
                    android:id="@+id/iv_setting_triangle_sleep"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/icon_setting_triangle" />

                <TextView
                    android:id="@+id/tv_setting_triangle_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@+id/iv_setting_triangle_sleep"
                    android:text="睡眠模式"
                    android:textColor="@color/white" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_setting_sleep_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_setting_triangle_top"
                android:layout_marginLeft="20dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_sleep_model_save"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="35dp"
                    android:background="@drawable/icon_sleep_model_save" />

                <ImageView
                    android:id="@+id/iv_sleep_model_save_selected"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/icon_sleep_model_save_selected"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_setting_sleep_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_setting_triangle_top"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="2dp">

                <ImageView
                    android:id="@+id/iv_sleep_model_delete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="35dp"
                    android:background="@drawable/icon_sleep_model_delete"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_sleep_model_delete_selected"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="46dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/icon_sleep_model_delete_selected"
                    android:visibility="gone" />

            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_setting_one_keyreset_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp">

            <RelativeLayout
                android:id="@+id/rl_setting_one_keyreset_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp">

                <ImageView
                    android:id="@+id/iv_setting_triangle_onekeyreset"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/icon_setting_triangle" />

                <TextView
                    android:id="@+id/tv_setting_triangle_onekeyreset_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/iv_setting_triangle_onekeyreset"
                    android:text="一键复位"
                    android:textColor="@color/white" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_setting_onekeyreset_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_setting_one_keyreset_bottom"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_onekeyreset_save"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="55dp"
                    android:background="@drawable/icon_sleep_model_save" />

                <ImageView
                    android:id="@+id/iv_onekeyreset_save_selected"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/icon_sleep_model_save_selected"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_setting_onekeyreset_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/rl_setting_one_keyreset_bottom"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="2dp">

                <ImageView
                    android:id="@+id/iv_onekeyreset_delete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/icon_sleep_model_delete"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_onekeyreset_delete_selected"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/icon_sleep_model_delete_selected"
                    android:visibility="gone" />

            </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp">

        <RelativeLayout
            android:id="@+id/rl_sleep_model"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_white_corner">

            <RelativeLayout
                android:id="@+id/iv_sleep_model_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_sleep_model"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/icon_main_sleep" />

                <ImageView
                    android:id="@+id/iv_sleep_model_selected"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/icon_main_sleep_selected"
                    android:visibility="gone" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tv_sleep_model_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="睡眠模式"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_sleep_model_english_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_sleep_model_title"
                    android:text="Sleep"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_one_keyreset"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/rl_sleep_model"
            android:background="@drawable/shape_white_corner">


            <ImageView
                android:id="@+id/iv_one_keyreset"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/icon_main_onekeyreset" />

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/iv_one_keyreset">

                <TextView
                    android:id="@+id/tv_one_keyreset_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="一键复位"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_one_keyreset_english_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_one_keyreset_title"
                    android:text="Reset"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>